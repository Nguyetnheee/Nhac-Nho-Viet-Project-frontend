import React, { useEffect, useState } from 'react';
import { useNavigate } from 'react-router-dom'; 
import { checklistService } from '../services/checklistService';
import { scrollToTop } from '../utils/scrollUtils';
import { groupChecklistsByRitualName } from '../utils/dataUtils';
import { Select, Pagination, Spin } from 'antd';

const { Option } = Select;

const Checklist = () => {
  const navigate = useNavigate(); 
  
  const [checklistsByRitual, setChecklistsByRitual] = useState([]); 
  const [loading, setLoading] = useState(true);
  
  // Filter states
  const [filters, setFilters] = useState({
    ritualName: '',
    itemName: '',
    unit: ''
  });
  
  // Pagination states
  const [pagination, setPagination] = useState({
    current: 0,
    pageSize: 10,
    total: 0,
    totalPages: 0
  });

  // Filter options t·ª´ data
  const [filterOptions, setFilterOptions] = useState({
    ritualNames: [],
    itemNames: [],
    units: []
  });

  useEffect(() => {
    fetchChecklists();
    scrollToTop(true);
  }, [filters, pagination.current]);

  const fetchChecklists = async () => {
    setLoading(true);
    try {
      console.log('üîç Checklist page: Filtering checklists with:', filters);
      
      // Ki·ªÉm tra xem c√≥ filter n√†o ƒë∆∞·ª£c √°p d·ª•ng kh√¥ng
      const hasFilters = filters.ritualName || filters.itemName || filters.unit;
      
      let allChecklistData = [];
      
      // Lu√¥n load t·∫•t c·∫£ data tr∆∞·ªõc
      const data = await checklistService.getChecklists();
      console.log('‚úÖ Checklist page: All data received:', data);
      allChecklistData = Array.isArray(data) ? data : [];

      // √Åp d·ª•ng client-side filtering
      let filteredData = allChecklistData;
      
      if (filters.ritualName) {
        filteredData = filteredData.filter(item => 
          item.ritual?.ritualName === filters.ritualName
        );
        console.log(`üîç Filtered by ritual "${filters.ritualName}":`, filteredData.length, 'items');
      }
      
      if (filters.itemName) {
        filteredData = filteredData.filter(item => 
          item.item?.itemName === filters.itemName
        );
        console.log(`üîç Filtered by item "${filters.itemName}":`, filteredData.length, 'items');
      }
      
      if (filters.unit) {
        filteredData = filteredData.filter(item => 
          item.unit === filters.unit
        );
        console.log(`üîç Filtered by unit "${filters.unit}":`, filteredData.length, 'items');
      }

      console.log('üìä Final filtered data count:', filteredData.length);

      // C·∫≠p nh·∫≠t pagination v·ªõi t·ªïng s·ªë items sau khi filter
      setPagination(prev => ({
        ...prev,
        total: filteredData.length,
        totalPages: Math.ceil(filteredData.length / prev.pageSize)
      }));

      // √Åp d·ª•ng pagination client-side
      const startIndex = pagination.current * pagination.pageSize;
      const endIndex = startIndex + pagination.pageSize;
      const paginatedData = filteredData.slice(startIndex, endIndex);
      
      console.log(`ÔøΩ Showing page ${pagination.current + 1}: items ${startIndex} to ${endIndex}`);

      // Nh√≥m theo ritual
      const groupedData = groupChecklistsByRitualName(paginatedData);
      console.log('üìã Grouped by ritual:', groupedData);
      
      setChecklistsByRitual(groupedData);
      
      // Extract filter options t·ª´ to√†n b·ªô data (ch·ªâ l·∫ßn ƒë·∫ßu)
      if (filterOptions.ritualNames.length === 0) {
        extractFilterOptions(allChecklistData);
      }
      
    } catch (error) {
      console.error('‚ùå Checklist page: Error fetching checklists:', error);
      console.error('Error details:', {
        message: error.message,
        response: error.response?.data,
        status: error.response?.status
      });
      setChecklistsByRitual([]);
    } finally {
      setLoading(false);
    }
  };

  // Tr√≠ch xu·∫•t c√°c gi√° tr·ªã unique cho filter dropdowns
  const extractFilterOptions = (data) => {
    if (!Array.isArray(data) || data.length === 0) {
      console.warn('‚ö†Ô∏è No data to extract filter options');
      return;
    }

    console.log('üîß Extracting filter options from data:', data.length, 'items');
    console.log('Sample item:', data[0]);

    const ritualNames = [...new Set(data.map(item => item.ritual?.ritualName).filter(Boolean))];
    const itemNames = [...new Set(data.map(item => item.item?.itemName).filter(Boolean))];
    const units = [...new Set(data.map(item => item.unit).filter(Boolean))];
    
    console.log('‚úÖ Filter options extracted:');
    console.log('  - Ritual names:', ritualNames);
    console.log('  - Item names:', itemNames);
    console.log('  - Units:', units);
    
    setFilterOptions({
      ritualNames: ritualNames.sort(),
      itemNames: itemNames.sort(),
      units: units.sort()
    });
  };

  const handleFilterChange = (filterName, value) => {
    setFilters(prev => ({
      ...prev,
      [filterName]: value
    }));
    setPagination(prev => ({ ...prev, current: 0 })); // Reset v·ªÅ trang ƒë·∫ßu
  };

  const handlePageChange = (page, pageSize) => {
    setPagination(prev => ({
      ...prev,
      current: page - 1, // Ant Design pagination is 1-based, API is 0-based
      pageSize: pageSize
    }));
  };
  
  const handleViewDetails = (ritualId) => {
    navigate(`/rituals/${ritualId}`); 
  };

  return (
    <div className="min-h-screen bg-vietnam-cream font-sans transition-all duration-300">
      {/* HERO SECTION v·ªõi B·ªô L·ªçc */}
      <section 
        className="relative py-24 text-center overflow-hidden shadow-2xl"
        style={{
          backgroundImage: "url('/hero-background.jpg')",
          backgroundSize: "cover",
          backgroundPosition: "center",
        }}
      >
        {/* L·ªõp overlay m√†u xanh m·ªù */}
        <div className="absolute inset-0 bg-vietnam-green/70 backdrop-blur-[1px] transition-opacity duration-500"></div>

        <div className="relative z-10 max-w-4xl mx-auto px-6 text-white"> 
          <h1 className="text-4xl md:text-5xl font-serif font-bold mb-4 drop-shadow-lg">
            Danh M·ª•c L·ªÖ H·ªôi
          </h1>
          <p className="text-base md:text-lg text-green-100 drop-shadow-md mb-8">
            N∆°i b·∫°n c√≥ th·ªÉ t√¨m, t·∫°o v√† l∆∞u c√°c danh s√°ch l·ªÖ v·∫≠t ho·∫∑c ho·∫°t ƒë·ªông c·∫ßn chu·∫©n b·ªã cho t·ª´ng l·ªÖ h·ªôi.
          </p>

          {/* B·ªô L·ªçc */}
          <div className="bg-white/10 backdrop-blur-md rounded-2xl p-6 shadow-2xl">
            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
              {/* L·ªçc theo T√™n Nghi L·ªÖ */}
              <div>
                <label className="block text-white text-sm font-semibold mb-2 text-left">
                  T√™n Nghi L·ªÖ
                </label>
                <Select
                  allowClear
                  placeholder="Ch·ªçn nghi l·ªÖ"
                  style={{ width: '100%' }}
                  size="large"
                  value={filters.ritualName || undefined}
                  onChange={(value) => handleFilterChange('ritualName', value)}
                >
                  {filterOptions.ritualNames.map(name => (
                    <Option key={name} value={name}>{name}</Option>
                  ))}
                </Select>
              </div>

              {/* L·ªçc theo T√™n V·∫≠t Ph·∫©m */}
              <div>
                <label className="block text-white text-sm font-semibold mb-2 text-left">
                  T√™n V·∫≠t Ph·∫©m
                </label>
                <Select
                  allowClear
                  placeholder="Ch·ªçn v·∫≠t ph·∫©m"
                  style={{ width: '100%' }}
                  size="large"
                  value={filters.itemName || undefined}
                  onChange={(value) => handleFilterChange('itemName', value)}
                >
                  {filterOptions.itemNames.map(name => (
                    <Option key={name} value={name}>{name}</Option>
                  ))}
                </Select>
              </div>

              {/* L·ªçc theo ƒê∆°n V·ªã */}
              <div>
                <label className="block text-white text-sm font-semibold mb-2 text-left">
                  ƒê∆°n V·ªã
                </label>
                <Select
                  allowClear
                  placeholder="Ch·ªçn ƒë∆°n v·ªã"
                  style={{ width: '100%' }}
                  size="large"
                  value={filters.unit || undefined}
                  onChange={(value) => handleFilterChange('unit', value)}
                >
                  {filterOptions.units.map(unit => (
                    <Option key={unit} value={unit}>{unit}</Option>
                  ))}
                </Select>
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* CHECKLIST M·∫™U */}
      <section className="py-12 max-w-6xl mx-auto px-6">

        {loading ? (
          <div className="flex justify-center items-center py-10">
            <Spin size="large" />
          </div>
        ) : checklistsByRitual.length === 0 ? (
          <div className="text-center py-20">
            <div className="max-w-md mx-auto">
              <div className="text-6xl mb-4">üìã</div>
              <h3 className="text-2xl font-bold text-vietnam-green mb-4">
                Kh√¥ng t√¨m th·∫•y k·∫øt qu·∫£
              </h3>
              <p className="text-gray-600 mb-6">
                Th·ª≠ thay ƒë·ªïi b·ªô l·ªçc ƒë·ªÉ xem c√°c k·∫øt qu·∫£ kh√°c
              </p>
              <button
                onClick={fetchChecklists}
                className="bg-vietnam-green text-white px-6 py-3 rounded-lg hover:bg-vietnam-green/90 transition-colors"
              >
                üîÑ T·∫£i l·∫°i
              </button>
            </div>
          </div>
        ) : (
          <>
            <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6"> 
            {checklistsByRitual.map((ritualChecklist) => (
              <div
                key={ritualChecklist.ritualId} 
                className="relative rounded-xl overflow-hidden shadow-2xl border border-amber-300/60 transition-transform duration-300 hover:scale-[1.03] hover:shadow-3xl"
                style={{
                  backgroundImage: "url('/checklist-background.jpg')",
                  backgroundSize: "cover",
                  backgroundPosition: "center",
                }}
              >
                {/* Overlay */}
                <div className="absolute inset-0 bg-white/65 backdrop-blur-[1px]"></div>

                {/* N·ªôi dung checklist */}
                <div className="relative z-10 p-4 md:p-5 text-stone-800 text-sm flex flex-col h-full">
                  {/* Ti√™u ƒë·ªÅ m√†u cam */}
                  <h3 className="text-xl font-bold text-amber-600 drop-shadow mb-4 border-b pb-2 border-amber-300/60">
                    {ritualChecklist.ritualName || 'T√™n l·ªÖ h·ªôi'} 
                    <span className='ml-2 text-sm font-normal text-stone-700'>
                       ({ritualChecklist.items.length} m·ª•c)
                    </span>
                  </h3>
                  
                  {/* Danh s√°ch m·ª•c */}
                  <div className="space-y-3 overflow-y-auto max-h-80 pr-2 flex-grow"> 
                      {ritualChecklist.items.map((item) => (
                        <div
                          key={item.checklistId} 
                          className="bg-white/70 p-3 rounded-lg shadow-sm border border-amber-200/70 transition-all duration-300 hover:bg-amber-100/80 hover:shadow-md"
                        >
                          <div className="flex items-start">
                            <input
                              type="checkbox"
                              id={`item-${item.checklistId}-${ritualChecklist.ritualId}`}
                              className="mt-1 h-5 w-5 accent-amber-600 border-amber-400 rounded focus:ring-amber-600 shrink-0 cursor-pointer"
                              readOnly
                            />
                            <label
                              htmlFor={`item-${item.checklistId}-${ritualChecklist.ritualId}`}
                              className="ml-3 text-stone-800 font-medium text-base flex-1 cursor-pointer"
                            >
                              {item.itemName} 
                              {item.quantity > 1 && (
                                  <span className="ml-2 text-xs px-1.5 py-[2px] rounded bg-amber-200/70 text-stone-800 border border-amber-300 whitespace-nowrap">
                                    x{item.quantity}
                                  </span>
                              )}
                            </label>
                          </div>
                          {item.checkNote && (
                            <p className="text-sm text-stone-600 italic mt-1 ml-8">
                              {item.checkNote}
                            </p>
                          )}
                        </div>
                      ))}
                  </div>
                  
                  {/* N√∫t xem chi ti·∫øt l·ªÖ h·ªôi */}
                  <div className="mt-6 pt-4 border-t border-amber-300/60 text-center mt-auto">
                      <button
                          onClick={() => handleViewDetails(ritualChecklist.ritualId)} 
                          className="bg-vietnam-gold text-stone-800 px-4 py-2 rounded-lg font-semibold hover:bg-yellow-600 transition duration-300 hover:shadow-md"
                      >
                          Xem chi ti·∫øt l·ªÖ h·ªôi
                      </button>
                  </div>
                </div>
              </div>
            ))}
          </div>

          {/* Pagination */}
          {pagination.total > pagination.pageSize && (
            <div className="flex justify-center mt-10">
              <Pagination
                current={pagination.current + 1} // Convert back to 1-based for display
                pageSize={pagination.pageSize}
                total={pagination.total}
                onChange={handlePageChange}
                showSizeChanger
                showTotal={(total) => `T·ªïng ${total} m·ª•c`}
                pageSizeOptions={['10', '20', '30', '50']}
              />
            </div>
          )}
        </>
        )}
      </section>
    </div>
  );
};

export default Checklist;